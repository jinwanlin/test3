<style>
.signup_bg{
	background:url('/assets/signup_bg.png') no-repeat  scroll center 120px #fff;
	height:600px;
}
</style>

<div class="row">
	<div class="span7 signup_bg">
	</div>
	<div class="span5">
		
		<%= simple_form_for User.new, url: registrations_path, html: {class: ' well span3', style: 'margin-left:-40px;'} do |f| %>
			<%= f.input :phone, label: "手机号" %>
			<%= f.input :password, label: "密码" %>
		  <%= f.submit '注册', class: 'btn btn-success' %>
		<% end %>
</div>
</div>

