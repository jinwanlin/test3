<%= simple_form_for User.new, url: sessions_path, html: {class: 'form-horizontal'} do |f| %>
	<%= f.input :phone, label: '手机号', input_html: {class: 'required'} %>
	<%= f.input :password, label: '密码', input_html: {class: 'required'} unless Settings.has_validate_code %>
	<div class="form-actions">
    <%= f.submit '登陆', class: 'btn btn-primary' %>
	</div>
<% end %>