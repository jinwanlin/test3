<%= link_to '添加商品', "#new_order_item_div", class: 'btn pull-left btn-small btn-primary', :"data-toggle" => "modal", onclick: '$("#new_order_item")[0].reset();'  %>


<div id="new_order_item_div" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3 id="myModalLabel">添加商品</h3>
	</div>
	<%= simple_form_for @order.order_items.build, html: {class: 'form-horizontal'} do |f| %>
		<%= f.hidden_field :order_id %>
		<div class="modal-body" style="min-height:260px;">
			<%= f.input :product, label: '<abbr title="required">*</abbr> 商品名称' do %>
				<%= text_field_tag "product_name", "", class: 'required', id: 'product_search', autocomplete: 'off' %>
			<% end %>
			<%= f.input :order_amount, label: '数量', :collection => Product::AMOUNTS, input_html: {class: 'required'} %>
		</div>
	
		<div class="modal-footer">
	    <%= f.submit '保存', class: 'btn btn-primary' %>
			<button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
		</div>
	<% end %>
</div>
