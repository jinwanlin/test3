<link rel="stylesheet" href="/assets/jquery-ui.css">
<link rel="stylesheet" href="/assets/products_print.css">
<style>
body{
	font-size:15px;
	padding-top:20px;
	background-color: #aaa;
}
ul.sortable_print{
	float:left;
}
ul.sortable_print li{
	list-style:none;
	padding:10px;
	line-height:26px;
	border:1px solid #aaa;
}
.product_id{
	display:inline-block;
	text-align:right;
	width:23px;
	padding-right:5px;
}

.print_outline{
	width:660px;
	border: 1px solid #fff;
	background-color:#fff;
}
</style>

<div class="print_outline">

<div style="padding:10px 50px;">
	<div class="pull-left"></div>
	<div class="pull-right"><%= Date.today %></div>
	<div style="text-align:center; font-size:20px;"><%= @user.name %><span style="font-size:14px;">（采购单）</span></div>
</div>
<div style="overflow:hidden;">
		<ul class="sortable_print" style="">
				<li>
						<% @predicts.each_with_index do |predict, index| %>
							<% product = predict.product %>
								<div>
									<span class="product_id"><%= product.id %></span>
									<%= product.product_name %>
									
<!-- 									<span class="shengmu"><%#= predict.order_times %></span>
									<%= product.unit %> -->
									
									<%= product.sales_price(@user.level) %><span style="font-size:12px;">元/斤</span>
								</div>
								
								<% if (index+1) % 33 == 0 %>
												</li>
										</ul>
										<ul class="sortable_print" style="">
												<li>
								<% end %>
						<% end %>
				</li>
		</ul>
</div>
</div>