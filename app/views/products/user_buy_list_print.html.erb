<link rel="stylesheet" href="/assets/jquery-ui.css">
<link rel="stylesheet" href="/assets/products_print.css">
<style>
body{
	font-size:15px;
	padding-top:20px;
	background-color: #aaa;
}
ul.sortable_print{
	float:left;
	width:185px;
}
ul.sortable_print li{
	list-style:none;
	padding:10px;
	line-height:26px;
	border:1px solid #aaa;
}
.product_id{
	display:inline-block;
	text-align:right;
	width:23px;
	padding-right:5px;
}

.print_outline{
	width:660px;
	border: 1px solid #fff;
	background-color:#fff;
}
</style>

<div class="print_outline">

<div style="padding:10px 50px;">
	<div class="pull-left"></div>
	<div class="pull-right">日期：<span style=" width:80px;"><%#= Date.today %></span></div>
	<div style="text-align:center; font-size:20px;"><%= @user.name %><span style="font-size:14px;">（采购单）</span></div>
</div>
<div style="overflow:hidden;">
		<ul class="sortable_print" style="">
				<li>
						<% is_print_zero = false %>
						<% @predicts.each_with_index do |predict, index| %>
							<% product = predict.product %>
							
							<% if predict.order_times == 0 && !is_print_zero %>
								<div style="border-top:1px solid red;">
								<% is_print_zero = true %>
							<% else %>
								<div style="<%= 'background-color: #aaa;' if predict.product.save_time > 1 %>">
							<% end %>
									<span class="product_id">
											<%= params[:admin] ? predict.order_times : product.id %>
									</span>
									
									<% if params[:admin] %>
										<%= link_to product.product_name, edit_product_path(product) %>
									<% else %>
										<%= product.product_name %>
									<% end %>
									
 									<span class="shengmu">
										<%= predict.average_amount.to_i if params[:admin] %>
									</span>
									
									<span class="pull-right"><%= product.unit %></span>
								</div>
								
								<% if (index+1) % 33 == 0 %>
												</li>
										</ul>
										<ul class="sortable_print" style="">
												<li>
								<% end %>
						<% end %>
						<div>
							<img src="/assets/weixin_no.jpg" style="width:130px;">
						</div>
				</li>
		</ul>
</div>

<div style="padding:0 20px;">
	备注：填写数量后，可拍照发送到微信账号（15810845422），让客服为您下单。
</div>
		
</div>