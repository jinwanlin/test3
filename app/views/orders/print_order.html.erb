<script type="text/javascript">  
$(function(){
	$(".order_no").each(function(){
		$(this).html(code128($(this).html()))
  });
})
</script>
<style>
.table th, .table td{
	line-height:6px;
}
.table th.alnright{
	text-align: center;
}
.table td.alnright{
	text-align: right;
}
</style>

<% @orders.each do |order| %>
<div style="width:700px; height:1050px; border:1px solid #fff; margin:0 auto; padding:20px; overflow:hidden; background-color: #fff;">
	<div style=" height:60px; margin-top:10px;">
		<div class="barcode order_no"><%= order.sn %></div>
		<div class="pull-right" style="text-align:right;">
			<p>订购日期：<%= order.created_at.strftime('%Y-%m-%d').to_s %></p>
			<!-- <p>丰台区，南三环西路，搜宝商务中心，2号楼1910</p> -->
		</div>
		<div style="text-align:center; ">
			<div style="font-weight:700; font-size:24px; line-height:30px; ">
				<%= order.user.name %>
			</div>
			<div>
				<%#= phone_no order.user.phone %>
			</div>
		</div>
	</div>

	<table class="table" style="font-size:12px; margin:20px 0;">
	  <tr>
	    <th>商品</th>
			<th>单价</th>
	    <th>订购量</th>
	    <th>配货量</th>
			<th class='alnright'>金额</th>
			<th style="width: 21px; border-top-width:0; background-color:#fff;"></th>
	    <th>商品</th>
			<th>单价</th>
	    <th>订购量</th>
	    <th>配货量</th>
			<th class='alnright'>金额</th>
	<% order.order_items.each_with_index do |order_item, index| %>
		<% if index%2==0 %>
			</tr>
			<tr>
		<% else %>
			<td style="border-top-width:0"></td>
		<% end %>
	
		<td>
			<%= order_item.id if order.state_index<3 %>
			<%= order_item.product.product_name %>
		</td>
		<td><%= price_format order_item.price %> 元/斤</td>
		<td><%= order_item.order_amount %> 斤 </td>
		<td><%= "#{price_format order_item.ship_amount} 斤" if order_item.ship_amount>0 %></td>
		<td class='alnright'><%= "#{price_format order_item.ship_sum}" if order_item.ship_sum>0 %></td>
	<% end %>

	<% if order.order_items.size%2!=0 %>
		<td style="border-top-width:0"></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
	<% end %>
		</tr>
	</table>

	<% if order.ship_sum > 0 %>
		<div style="font-size:16px; margin-right:30px; text-align:right;" class="">合计：<span id="order_ship_sum" style="color:red"><%= price_format order.ship_sum %> 元</div>
	<% end %>
		<div style="padding-top:10px; border-top:1px solid #888; margin-top:40px;">
			<div class="pull-left">
				服务电话：156-5771-5360
			</div>
<!-- 				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			网址：http://www.caicai.co -->
		</div>
  </div>
<% end %>





