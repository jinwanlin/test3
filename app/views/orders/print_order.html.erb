<script type="text/javascript">  
$(function(){
	$(".order_no").each(function(){
		$(this).html(code128($(this).html()))
  });
})
</script>
<style>
.table th, .table td{
	line-height:6px;
}
.table th.alnright{
	text-align: center;
}
.table td.alnright{
	text-align: right;
}
</style>

<% @orders.each do |order| %>
<div style="width:700px; height:1050px; border:1px solid #fff; margin:0 auto; padding:20px; overflow:hidden; background-color: #fff;">
	<div style=" height:60px; margin-top:10px;">
		<div class="barcode order_no"><%= order.sn %></div>
		<div class="pull-right" style="text-align:right;">
			<p>订购日期：<%= order.created_at.strftime('%Y-%m-%d').to_s %></p>
			<!-- <p>丰台区，南三环西路，搜宝商务中心，2号楼1910</p> -->
		</div>
		<div style="text-align:center; ">
			<div style="font-weight:700; font-size:24px; line-height:30px; ">
				<%= order.user.name %>
			</div>
			<div>
				<%#= phone_no order.user.phone %>
			</div>
		</div>
	</div>
<div style="">

	<% last_shengmu = "" %>
	<% list = order.order_items.order("pinyin") %>
	<table class="table pull-left" style="font-size:12px; margin:20px 0;  width:48%;">
	  <tr>
			<% if order.state_index<3 %>
				<th></th>
				<th>ID</th>
			<% end %>
	    <th>商品</th>
			<% if order.state_index>2 %>
				<th>单价</th>
			<% end %>
	    <th>订购量</th>
	    <th>配货量</th>
			<th class='alnright'>金额</th>
		</tr>
		<% list[0...(list.length+1)/2].each_with_index do |order_item, index| %>
		<tr>
			<% if order.state_index<3 %>
				<td>
					<% shengmu = order_item.product.pinyin[0] %>
					<% if shengmu!=last_shengmu %>
						<%= last_shengmu = shengmu %>
					<% end %>
				</td>
				<td><%= order_item.product.id  %></td>
			<% end %>
			
			<td>
				<%= order_item.product.product_name %>
			</td>
			<% if order.state_index>2 %>
				<td><%= price_format order_item.price %> 元/斤</td>
			<% end %>
			<td><%= order_item.order_amount %> 斤 </td>
			<td><%= "#{price_format order_item.ship_amount} 斤" if order_item.ship_amount>0 %></td>
			<td class='alnright'><%= "#{price_format order_item.ship_sum}" if order_item.ship_sum>0 %></td>
			</tr>
		<% end %>
		
	</table>
	
	
	<table class="table pull-right" style="font-size:12px; margin:20px 0; width:48%;">
	  <tr>
			<% if order.state_index<3 %>
				<th></th>
				<th>ID</th>
			<% end %>
	    <th>商品</th>
			<% if order.state_index>2 %>
				<th>单价</th>
			<% end %>
	    <th>订购量</th>
	    <th>配货量</th>
			<th class='alnright'>金额</th>
		</tr>
		
		<% list[(list.length+1)/2..-1].each_with_index do |order_item, index| %>
		<tr>
			<% if order.state_index<3 %>
				<td>
					<% shengmu = order_item.product.pinyin[0] %>
					<% if shengmu!=last_shengmu %>
						<%= last_shengmu = shengmu %>
					<% end %>
				</td>
				<td><%= order_item.product.id  %></td>
			<% end %>
			
			<td>
				<%= order_item.product.product_name %>
			</td>
			<% if order.state_index>2 %>
				<td><%= price_format order_item.price %> 元/斤</td>
			<% end %>
			<td><%= order_item.order_amount %> 斤 </td>
			<td><%= "#{price_format order_item.ship_amount} 斤" if order_item.ship_amount>0 %></td>
			<td class='alnright'><%= "#{price_format order_item.ship_sum}" if order_item.ship_sum>0 %></td>
			</tr>
		<% end %>
		
	</table>
</div>

	<% if order.ship_sum > 0 %>
		<div style="font-size:16px; margin-right:30px; text-align:right; clear:both;" class="">合计：<span id="order_ship_sum" style="color:red"><%= price_format order.ship_sum %> 元</div>
	<% end %>
		<div style="padding-top:10px; border-top:1px solid #888; margin-top:40px; clear:both;">
			<div class="pull-left">
				服务电话：156-5771-5360
			</div>
<!-- 				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			网址：http://www.caicai.co -->
		</div>
  </div>
<% end %>





