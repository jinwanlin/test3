
<table class="table">
  <tr>
    <th>订单号</th>
		<% if current_user && current_user.admin? %>
    	<th>客户</th>
    	<th>电话</th>
		<% end %>
		<th>订单状态</th>
		<th>订单金额</th>
		<th>出货金额</th>
		<% if current_user && current_user.admin? %>
			<th>利润</th>
		<% end %>
		<th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
		<td><%= link_to order.sn, order %></td>
		<% if current_user && current_user.admin? %>
			<td><%= link_to order.user.name, order.user %></td>
			<td><%= order.user.phone %></td>
		<% end %>
		<td><%= order_state order.state %></td>
		<td><%= price_format order.order_sum %></td>
		<td><%= price_format order.ship_sum %></td>
		<% if current_user && current_user.admin? %>
			<td><%= price_format order.profit  %></td>
		<% end %>
    <td>
			<%= link_to '', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'icon-trash', title: '删除' unless order.done? || order.canceled? %>
		</td>
  </tr>
<% end %>
</table>
