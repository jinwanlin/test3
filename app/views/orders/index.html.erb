
<table class="table">
  <tr>
    <th>订单号</th>
    <th>客户</th>
    <th>电话</th>
		<th>订单总计</th>
		<th>状态</th>
		<th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
		<td><%= link_to order.sn, order %></td>
		<td><%= link_to order.user.name, order.user %></td>
		<td><%= order.user.phone %></td>
		<td><%= order.sum %></td>
		<td><%= order_state order.state %></td>
    <td>
			<%= link_to '删除', order, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
  </tr>
<% end %>
</table>
