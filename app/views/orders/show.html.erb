<div>
	<a onclick="alert(‘打印’)"  class="btn btn-info" href="#new_order_item_div">打印</a>
	<%= link_to '取消', cancel_order_path(@order), method: :put, class: 'btn btn-warning pull-right' unless @order.done? %>
</div>
<br />
<table class="table">
  <tr>
    <th>商品</th>
    <th>订购量</th>
    <th>出货重量</th>
		<th>单价</th>
		<th></th>
  </tr>

<% @order.order_items.each do |order_item| %>
  <tr>
		<td><%= link_to order_item.product.name, order_item.product %></td>
		<td><%= order_item.order_amount %></td>
		<td><%= order_item.ship_amount %></td>
		<td><%= order_item.price %></td>
    <td>
			<%= link_to '删除', order_item, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
  </tr>
<% end %>
</table>

<%= render "order_items/form" if !@order.ship? && !@order.done? %>

<p class="pull-right">
	<%= link_to '提交', submit_order_path(@order), method: :put, class: 'btn btn-success' if @order.pending? %>
	<%= link_to '出库', ship_order_path(@order), method: :put, class: 'btn btn-primary' if @order.open? %>
	<%= link_to '完工', done_order_path(@order), method: :put, class: 'btn btn-danger' if @order.ship? %>
</p>